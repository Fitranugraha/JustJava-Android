<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    tools:context="com.marknkamau.justjava.ui.signup.SignUpActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_just_java_text" />

        <EditText
            android:id="@+id/et_email_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/et_email_address"
            app:layout_constraintRight_toLeftOf="@+id/img_view_pass"
            app:layout_constraintTop_toBottomOf="@+id/et_email_address" />

        <ImageView
            android:id="@+id/img_view_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:alpha=".87"
            app:layout_constraintBottom_toBottomOf="@+id/et_password"
            app:layout_constraintRight_toRightOf="@+id/et_email_address"
            app:layout_constraintTop_toTopOf="@+id/et_password"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/ic_visibility_off" />

        <EditText
            android:id="@+id/et_password_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/repeat_password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/et_password"
            app:layout_constraintRight_toLeftOf="@+id/img_view_pass_rpt"
            app:layout_constraintTop_toBottomOf="@+id/et_password" />

        <ImageView
            android:id="@+id/img_view_pass_rpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:alpha=".87"
            app:layout_constraintBottom_toBottomOf="@+id/et_password_repeat"
            app:layout_constraintRight_toRightOf="@+id/img_view_pass"
            app:layout_constraintTop_toTopOf="@+id/et_password_repeat"
            app:srcCompat="@drawable/ic_visibility_off" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/et_password_repeat"
            app:layout_constraintRight_toRightOf="@+id/img_view_pass_rpt"
            app:layout_constraintTop_toBottomOf="@+id/et_password_repeat" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/et_name"
            app:layout_constraintRight_toRightOf="@+id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

        <MultiAutoCompleteTextView
            android:id="@+id/et_delivery_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/default_address"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryLight"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/et_phone_number"
            app:layout_constraintRight_toRightOf="@+id/et_phone_number"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_number" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorAccent"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="@+id/et_delivery_address"
            app:layout_constraintRight_toRightOf="@+id/et_delivery_address"
            app:layout_constraintTop_toBottomOf="@+id/et_delivery_address" />

        <TextView
            android:id="@+id/tv_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/already_have_an_account"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>